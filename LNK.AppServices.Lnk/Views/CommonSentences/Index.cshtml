@using LNK.Queries.Sentences;
@model List<SentenceOverview>
@{
    ViewData["Title"] = "Common English Speaking Sentences";
    var index = Model.Count() / 3;
}

<div class="container">
    <div class="section">
        <!--   Icon Section   -->
        <div class="row">
            <h3 class="header center orange-text">You should practise following common sentences</h3>
        </div>
        <div class="row">
            <div class="col s12 m4">
                <div class="icon-block">
                    <ul>
                        @for (int i = 0; i < Model.Count() / 3; i++)
                        {
                            <li>@Model[i].Title</li>
                        }
                    </ul>
                    @*<h2 class="center light-blue-text"><i class="material-icons">flash_on</i></h2>*@
                    @*<h5 class="center">Speeds up development</h5>*@
                </div>
            </div>

            <div class="col s12 m4">
                <div class="icon-block">
                    <ul>
                        @for (int i = 0; i < Model.Count() / 3; i++)
                        {
                            <li>@Model[i + index].Title</li>
                        }
                    </ul>
                </div>
            </div>

            <div class="col s12 m4">
                <div class="icon-block">
                    <ul>
                        @for (int i = 0; i < Model.Count() / 3; i++)
                        {
                            <li>@Model[i + index * 2].Title</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <br><br>
</div>